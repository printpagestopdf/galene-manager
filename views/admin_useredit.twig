{% extends main.twig %}

{% block content %}
<form class="box" method="POST">
	{% wp_nonce_field("admin_update_user","gal_form_id",false,true) %}
	<input type="hidden" name="galene_user" id="galene_user" value="{{ $d['user']['id'] }}" >
	<p class="panel-heading mb-3">
		{{ __("Edit user",'galene-mgr') }}: {{ $d['user']['displayName'] }}
	</p>

	<div class="tab-content" >
		
		{% if ($d['user']['type'] == 0): %}
		<div class="field">
		  <label class="label">{{ __("Display name",'galene-mgr') }}</label>
		  <div class="control">
			<input name="displayName" id="displayName" class="input" type="text" value="{{ $d['user']['displayName'] }} " >
		  </div>
		  <p class="help">{{ __("Name that will be used during session",'galene-mgr') }}</p>
		</div> 
		<div class="field">
		  <label class="label">{{ __("Loginname",'galene-mgr') }}</label>
		  <div class="control">
			<input name="login" id="login" class="input" type="text" value="{{ $d['user']['login'] }}" >
		  </div>
		  <p class="help">{{ __("Username for authentication",'galene-mgr') }}</p>
		</div> 

		<div class="field">
		  <label class="label">{{ __("Password",'galene-mgr') }}</label>
		  <div class="control">
			<input name="password_new" id="password_new" class="input" type="password"  >
		  </div>
		  <p class="help">{{ __("Login password, only use for new user or password change otherwise empty",'galene-mgr') }}</p>
		</div> 

		<div class="field">
		  <label class="label">{{ __("Password (repeat)",'galene-mgr') }}</label>
		  <div class="control">
			<input class="input" name="password_repeat" id="password_repeat" type="password"  >
		  </div>
		  <p class="help">{{ __("Password (repeat)",'galene-mgr') }}</p>
		</div> 
		<div class="field">
			<label class="checkbox">
			  <input type="checkbox" name="isAdmin" id="isAdmin" {{ (@$d['user']['isAdmin'] == 1 )?'checked':'' }} >
			  {{ __("Is administrator",'galene-mgr') }}
			</label>
			<p class="help">{{ __("If checked this user can login to the Gal√®ne manager (not room operator)",'galene-mgr') }}</p>
		</div>			
		{% endif; %}

	</div>
  
  

	<div class="field is-grouped is-grouped-right mt-3">
	  <p class="control">
		<button class="button is-primary" type="submit" name="galene_action" id="galene_action" value="admin_update_user" >
		  {{ __("Save",'galene-mgr') }}
		</button>
	  </p>
	  <p class="control">
		<a class="button is-light" href="{% echo Gal_util::add_arg([ 'galene_action' => 'admin_screen_usersettings' ]) %}">
		  {{ __("Cancel",'galene-mgr') }}
		</a>
	  </p>
	</div>
</form>
{% endblock %}