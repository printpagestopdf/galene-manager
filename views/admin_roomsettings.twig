{% extends main.twig %}

{% block content %}
<nav class="panel">
	<form method="POST">
	<input type="hidden" name="galene_subaction" value="new_room">
		<div class="panel-heading columns mx-0 p-0 my-2">
			<div class="column my-auto">{{ __("Rooms",'galene-mgr') }}</div>
				<div class="column field is-grouped is-grouped-right is-align-self-center py-0">
					<p class="control">
						<input type="hidden" name="galene_subaction" value="new_room" >
						<button type="submit" name="galene_action"
								title="{{ __("Create a new room based on this template",'galene-mgr') }}"
								value="admin_screen_roomedit" class="button is-primary is-outlined">
							<figure class="image is-16x16 mr-2">
							  <img src="{{ GALENE_PLUGIN_URL }}/assets/magic-wand-outline.svg">
							</figure>
							  {{ __("New room",'galene-mgr') }}
						</button>
					</p>
					<p class="control">
					  <div class="control">
						<div class="select">
						  <select name="new_room_preset" id="new_room_preset"  >
							<option value="conference"  >{{ __("Conference",'galene-mgr') }}</option>
							<option value="presentation"  >{{ __("Seminar",'galene-mgr') }}</option>
							<option value="closed_group"  >{{ __("Closed group",'galene-mgr') }}</option>
						  </select>
						</div>		  
					  </div>
					</p>
				</div>
		</div>
	</form>


  {% foreach($d['rooms'] as $room): %}
  <label class="panel-block is-block" >
	<div class="columns">
		<div class="column is-narrow">	
			<a class="image-button" title="{{ __("Edit this room",'galene-mgr') }}"
					href="{{ Gal_util::add_arg([ 'galene_action' => 'admin_screen_roomedit', 'galene_room' => $room->id ]) }}"  >
				<figure class="image is-24x24 mx-2">
				  <img src="{{ GALENE_PLUGIN_URL }}/assets/edit-outline.svg">
				</figure>
			</a>
		</div>
		<div class="column is-cursor-default">
			<div class="is-inline-block">
				<a class="is-underlined" title="{{ __("Edit this room",'galene-mgr') }}"
				href="{{ Gal_util::add_arg([ 'galene_action' => 'admin_screen_roomedit', 'galene_room' => $room->id ]) }}"  >
					{{ $room->displayName }}
				</a>
			</div>
			<div class="is-inline-block vertical-centered ml-4">	
				<a class="image-button is-info modal-button js-modal-trigger"  
						title="{{ __("Display short info including links and code",'galene-mgr') }}"
						data-target="modal-{{ $room->id }}" aria-haspopup="true">
					<figure class="image is-24x24 mx-2">
					  <img  src="{{ GALENE_PLUGIN_URL }}/assets/info-circle.svg">
					</figure>
				</a>
			</div>
		</div>
		<div class="column is-narrow" title="{{ __("Permanently delete this room",'galene-mgr') }}">	
			<a  onclick="return confirm('{{ __("Do you really want to delete this room? All data are lost.",'galene-mgr') }}');" class="image-button" href="{% echo Gal_util::add_arg([ 'galene_action' => 'admin_room_delete', 'galene_room' => $room->id ]) %}"  >
				<figure class="image is-24x24 mx-2">
				  <img src="{{ GALENE_PLUGIN_URL }}/assets/trash-outline.svg">
				</figure>
			</a>
		</div>
  
  </div>
</label>  

	<div id="modal-{{ $room->id }}" class="modal xis-large-modal">
	  <div class="modal-background"></div>
	  <div class="modal-card">
		<header class="modal-card-head">
		  <p class="modal-card-title">{{ __("Shortinfo/Links",'galene-mgr') }}</p>
		  <button class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body"  >	
			<div class="field">
			{% if($room->needs_code): %}
			  <label class="label">{{ __("Code",'galene-mgr') }}</label>
			  <div class="field is-grouped">
				  <div class="control">
					{{ $room->room_accesscode }}
				  </div>
				  <div class="control">
					<button onclick="copyText('{{ $room->room_accesscode }}'); return false;">{{ __("Copy code",'galene-mgr') }}</button>
				  </div>
			  </div>
			</div> 
			{% endif; %}
			<div class="field">
			  <label class="label">{{ __("Link for listener",'galene-mgr') }}</label>
			  <div class="field is-grouped">
				  <div class="control">
					<a href="{{ $room->{'urls'}['recipient'] }}" target="_blank">{{ $room->{'urls'}['recipient'] }}</a>
				  </div>
				  <div class="control">
					<button onclick="copyText('{{ $room->{'urls'}['recipient'] }}'); return false;">{{ __("Copy link",'galene-mgr') }}</button>
				  </div>
			  </div>
			</div> 
			
			<div class="field">
			  <label class="label">{{ __("Link for presenter",'galene-mgr') }}</label>
			  <div class="field is-grouped">
				  <div class="control">
					<a href="{{ $room->{'urls'}['presenter'] }}" target="_blank">{{ $room->{'urls'}['presenter'] }}</a>
				  </div>
				  <div class="control">
					<button onclick="copyText('{{ $room->{'urls'}['presenter'] }}'); return false;">{{ __("Copy link",'galene-mgr') }}</button>
				  </div>
			  </div>
			</div> 
			
			<div class="field">
			  <label class="label">{{ __("Link for operator",'galene-mgr') }}</label>
			  <div class="field is-grouped">
				  <div class="control">
					<a href="{{ $room->{'urls'}['admin'] }}" target="_blank">{{ $room->{'urls'}['admin'] }}</a>
				  </div>
				  <div class="control">
					<button onclick="copyText('{{ $room->{'urls'}['admin'] }}'); return false;">{{ __("Copy link",'galene-mgr') }}</button>
				  </div>
			  </div>
			</div> 
		</section>
	  </div>
	</div>


  {% endforeach; %}
  
</nav>

{% endblock %}